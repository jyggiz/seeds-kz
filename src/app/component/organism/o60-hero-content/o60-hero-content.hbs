<link rel="stylesheet" href="./o60-hero-content.scss">
<script src="./O60HeroContent.ts"></script>

<div class="o-heroContent{{#if theme}} t-{{theme}}{{else}} t-darkMono{{/if}}
{{#if (condition  (condition content.buttonType '!==' 'pillar')
                  '&&'
                  (condition content.buttonType '!==' 'mega-buttons-invest-form'))}}
      -fullHeight
{{/if}}"
  data-component="o60-hero-content"
  {{#if scrollComponent}}data-scroll-component{{/if}}
  {{#if earlyDisplay}}data-early-display{{/if}}
>
  {{#with background}}
    {{> molecule/m34-component-background scrollComponent=false optimizeForLCP=../optimizeForLCP disableTransition=../earlyDisplay}}
  {{/with}}

  {{#with content.buttons}}
    <div class="o-heroContent__background">
      {{#each this}}
        {{#if heroBackgroundImageOnHover}}
          <div class="o-heroContent__backgroundImage" data-item-index="{{@index}}" data-item-background>
            {{> molecule/m34-component-background heroBackgroundImageOnHover disableTransition=true scrollComponent=true}}
          </div>
        {{/if}}
      {{/each}}
    </div>
  {{/with}}

  <div class="o-heroContent__container{{#with align}} -{{horizontal}} -{{vertical}}{{/with}}{{#if centralizedButtons}} -centralized{{/if}}">
      {{#with content}}
        <div class="o-heroContent__content">
          {{#with link}}
            {{> molecule/m06-link }}
          {{/with}}

          {{> molecule/m04-component-header header alignment='none' disableTransition=../earlyDisplay}}
          {{#with buttons}}
            <div class="o-heroContent__buttons{{#if ../buttonType}} -{{../buttonType}}{{/if}}
              {{#if (condition ../../centralizedButtons '&&' (condition this.length '>' 6))}} -isExtended{{/if}}
              {{#if ../buttonContentDirection}} -{{../buttonContentDirection}}{{/if}}"
              data-button-wrapper data-button-type="{{#if ../buttonType}}{{../buttonType}}{{^}}regular{{/if}}">

              {{#with ../buttonEyebrow}}
                {{> atom/a04-eyebrow text=this size='small' }}
              {{/with}}
              {{#if (condition ../buttonType '===' 'mega-buttons-invest-form')}}
                  {{> organism/o98-mega-buttons-invest-form buttons=../buttons drilldownControls=../drilldownControls }}
                {{^}}
                  {{#each this}}
                    {{#if (condition ../../buttonType '===' 'tile')}}
                      {{> molecule/m53-tile-cta this }}
                    {{else if (condition (condition ../../buttonType '===' 'pillar') '||' (condition ../../buttonType '===' 'pillar-short'))}}
                      {{> molecule/m58-pillar-cta this }}
                    {{^}}
                      {{> molecule/m02-button this }}
                    {{/if}}
                  {{/each}}
              {{/if}}
            </div>
          {{/with}}
        </div>
      {{/with}}
      {{#if scrollButton}}
        {{> molecule/m10-scroll-button }}
      {{/if}}
  </div>
</div>
