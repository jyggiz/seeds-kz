<a class="o-dropdownNavigationList__link{{#if active}} -isActive{{/if}}"
    data-navigation-menu-item
    href="{{href}}"
    {{#if (condition externalLink '===' true)}}target="_blank" rel="noopener"{{/if}}
>
    <span class="o-dropdownNavigationList__index">
    {{#if (condition @index '<' 9)}}0{{/if}}{{ arithmetic @index '+' 1}}
    </span>
    <span class="o-dropdownNavigationList__label">{{ label }}</span>
</a>
