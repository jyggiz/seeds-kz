

<div
  class="o-modal"
  data-component="o10-modal"
  aria-modal="true"
  role="dialog"
  data-i18n="{{toJson @root.i18n.modals}}">
  <div class="o-modal__container">
    <div class="o-modal__mask" data-mask></div>
    <div class="o-modal__panel" data-panel>
      <div class="o-modal__controls">
        {{> molecule/m02-button level="secondary" icon="close" theme="white" variant="close" aria=(object label=@root.i18n.modals.common.back)}}
      </div>
      <div class="o-modal__content" data-modal-container>
        {{!-- Modal content injected here --}}
      </div>
    </div>
  </div>
</div>
