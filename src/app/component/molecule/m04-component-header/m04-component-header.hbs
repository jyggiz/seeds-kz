<link rel="stylesheet" href="./m04-component-header.scss">
<script src="./M04ComponentHeader.ts"></script>

<div class="m-componentHeader{{#if alignment}} -{{alignment}}{{^}} -center{{/if}}{{#if variant}} -{{variant}}{{/if}}"
     data-alignment="{{#if alignment}}{{alignment}}{{^}}center{{/if}}"
     data-component="m04-component-header"
     {{#if disableTransition}}data-disable-transition="{{disableTransition}}" {{/if}}
    {{#if earlyDisplay}}data-early-display{{/if}}
>
  <div class="m-componentHeader__container">
    {{#with asset}}
      <div class="m-componentHeader__asset{{#if alignment}} -{{alignment}}{{^}} -center{{/if}}" data-asset-container>
        {{> atom/a01-image disableTransition=true}}
        </div>
    {{/with}}
    {{#if eyebrow}}
      {{> atom/a04-eyebrow eyebrow }}
    {{/if}}
    {{#if flipHeading}}
      {{> atom/a06-flip-heading flipHeading}}
    {{^}}
      {{> atom/a03-heading heading}}
    {{/if}}
    {{#if moustache}}
      {{> atom/a05-moustache moustache variant=moustache.variant }}
    {{/if}}
  </div>
</div>
