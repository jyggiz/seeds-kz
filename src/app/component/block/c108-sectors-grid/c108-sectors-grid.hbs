

<section class="b-sectorsGrid {{#if theme}} t-{{theme}}{{^}} t-light{{/if}}"
  data-component="c108-sectors-grid"
  {{#if scrollComponent}}data-scroll-component{{/if}}
  {{#if id}} id="{{id}}"{{/if}}
  {{#if (condition backgroundColor '||' padding)}}
    style="{{#with padding}}--component-block-padding: var(--{{#with start}}block-padding-{{this}}{{else}}container-margin{{/with}})
    {{#unless (condition start '===' end)}}var(--{{#with end}}block-padding-{{this}}{{else}}container-margin{{/with}}){{/unless}};{{/with}}
    {{#with backgroundColor}}--component-background-color: {{#unless (condition this '===' transparent)}}var(--color-{{this}}){{^}}transparent{{/unless}};{{/with}}"
  {{/if}}
  data-lazy-component
>
  {{#with background}}{{> molecule/m34-component-background scrollComponent=true disableTransition=true }}{{/with}}
  <div class="b-sectorsGrid__container">
    {{#with header}}{{> molecule/m04-component-header }}{{/with}}

    {{#if (condition tabs.length '>' 1)}}
      <div class="b-sectorsGrid__tabs">
        {{> molecule/m48-slider-pagination items=tabs autoplay=false variant="contentWidth" }}
      </div>
    {{/if}}

    <ul class="b-sectorsGrid__items">
      {{#each tabs}}
        <li class="b-sectorsGrid__item" data-tab>
          {{#if (condition variant '===' 'regions')}}
            {{> organism/o102-cards-grid variant="fullWidth" scrollComponent="true" }}
          {{else if (condition variant '===' 'sectors')}}
            {{> organism/o103-circles-grid scrollComponent="true" maxItemsPerRow=maxItemsPerRow }}
          {{/if}}
        </li>
      {{/each}}
    </ul>
  </div>
</section>
