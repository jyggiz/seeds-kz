

<section class="b-carousel{{#if variant}} -{{variant}}{{/if}}{{#if theme}} t-{{theme}}{{/if}}"
         data-component="c16-carousel"
         {{#if scrollComponent}}data-scroll-component{{/if}}
  {{#if (condition backgroundColor '||' padding)}}
         style="{{#with padding}}--component-block-padding: var(--{{#with start}}block-padding-{{this}}{{else}}container-margin{{/with}})
           {{#unless (condition start '===' end)}}var(--{{#with end}}block-padding-{{this}}{{else}}container-margin{{/with}}){{/unless}};{{/with}}
           {{#with backgroundColor}}--component-background-color: {{#unless (condition this '===' transparent)}}var(--color-{{this}}){{^}}transparent{{/unless}};{{/with}}"
  {{/if}} data-lazy-component>
  <div class="b-carousel__container">
    <div class="b-carousel__header">
      {{#if header.alignment}}
      {{> molecule/m04-component-header header  }}
      {{^}}
      {{> molecule/m04-component-header header alignment='start' }}
      {{/if}}

      <div class="b-carousel__controls" data-controls>
        {{> organism/o42-slider-controls }}
      </div>
    </div>

    <div class="b-carousel__content" data-carousel-container>
      <div class="swiper__container" data-slider>
        <div class="swiper-wrapper">
          {{#each items}}
            <div class="swiper-slide{{#if variant}} -{{variant}}{{/if}}">
              {{> organism/o19-update-card theme=../theme }}
            </div>
          {{/each}}
        </div>
        {{> atom/a08-page-indicators items=null }}
      </div>
    </div>
    {{#if (condition variant '===' 'ctaCarousel')}}
      <footer class="b-carousel__footer">
        {{#if (condition theme '===' 'dark')}}
          {{> molecule/m02-button ctaButton icon="arrow-right" level="secondary" theme="white" size="small"}}
        {{^}}
          {{> molecule/m02-button ctaButton icon="arrow-right" level="secondary" theme="black" size="small"}}
        {{/if}}
      </footer>
    {{/if}}
  </div>
</section>
