

<section class="b-profile{{#if theme}} t-{{theme}}{{/if}}{{#if (condition people.length "<=" 2)}} -isStatic{{/if}} {{#if fullMinHeight}} -fullMinHeight{{/if}}" data-component="c36-profile" {{#if scrollComponent}}data-scroll-component{{/if}}{{#if id}} id="{{id}}"{{/if}}
  {{#if (condition backgroundColor '||' padding)}}
         style="{{#with padding}}--component-block-padding: var(--{{#with start}}block-padding-{{this}}{{else}}container-margin{{/with}})
           {{#unless (condition start '===' end)}}var(--{{#with end}}block-padding-{{this}}{{else}}container-margin{{/with}}){{/unless}};{{/with}}
           {{#with backgroundColor}}--component-background-color: {{#unless (condition this '===' transparent)}}var(--color-{{this}}){{^}}transparent{{/unless}};{{/with}}"
  {{/if}}
data-lazy-component>
  <div class="b-profile__container">
    {{#if sectorImage}}
      <div class="b-profile__sectorImage" data-sector-image>
        {{> atom/a01-image sectorImage disableTransition=true }}
      </div>
    {{/if}}
    {{> molecule/m04-component-header header disableTransition=true }}

    <div class="b-profile__people swiper-container" data-slider>
      <ul class="b-profile__sliderItems swiper-wrapper">
        {{#each people}}
          <li class="b-profile__person swiper-slide" data-profile-person>
            {{> molecule/m22-person-card }}
          </li>
        {{/each}}
      </ul>

      {{#if (condition people.length ">" 2)}}
        <div class="b-profile__controls" data-controls>
          {{> organism/o42-slider-controls }}
        </div>
      {{/if}}

      {{#if (condition people.length ">" 1)}}
        {{> atom/a08-page-indicators }}
      {{/if}}

    </div>
  </div>

</section>

