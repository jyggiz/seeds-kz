


<section class="b-accordion{{#if theme}} t-{{theme}}{{/if}} {{#if fullMinHeight}} -fullMinHeight{{/if}}"
         data-component="c07-accordion"
         data-component-name="{{title.heading.text}}"
         {{#if scrollComponent}}data-scroll-component{{/if}}
         {{#if id}}id="{{id}}"{{/if}}
         {{#if (condition backgroundColor '||' padding)}}
         style="{{#with padding}}--component-block-padding: var(--{{#with start}}block-padding-{{this}}{{else}}container-margin{{/with}})
           {{#unless (condition start '===' end)}}var(--{{#with end}}block-padding-{{this}}{{else}}container-margin{{/with}}){{/unless}};{{/with}}
           {{#with backgroundColor}}--component-background-color: {{#unless (condition this '===' transparent)}}var(--color-{{this}}){{^}}transparent{{/unless}};{{/with}}"
  {{/if}}
  data-lazy-component>
  {{! todo: replace this with M34 }}
  {{#with background}}{{> molecule/m03-sticky-media }}{{/with}}
  {{#with title.heading }}
    <div class="b-contacts__title">
      {{> atom/a03-heading }}
     </div>
  {{/with}}
  <div class="b-accordion__container{{#if linkWithArrows}} -linkArrows{{/if}}">
    {{#with title}}
      {{> molecule/m18-paragraph title }}
    {{/with}}
    {{> organism/o05-accordion items=items }}
  </div>
</section>
