


<section class="b-dynamicCarousel{{#if theme}} t-{{theme}}{{/if}}"
  data-component="c116-dynamic-carousel"
  {{#if scrollComponent}}data-scroll-component{{/if}}
  {{#if id}} id="{{id}}"{{/if}}
  {{#if (condition backgroundColor '||' padding)}}
    style="{{#with padding}}--component-block-padding: var(--{{#with start}}block-padding-{{this}}{{else}}container-margin{{/with}})
    {{#unless (condition start '===' end)}}var(--{{#with end}}block-padding-{{this}}{{else}}container-margin{{/with}}){{/unless}};{{/with}}
    {{#with backgroundColor}}--component-background-color: {{#unless (condition this '===' transparent)}}var(--color-{{this}}){{^}}transparent{{/unless}};{{/with}}"
  {{/if}}
  data-lazy-component
>
  {{#if background }}
    {{> molecule/m34-component-background background disableTransition=true scrollComponent=true}}
  {{/if}}

  <div class="b-dynamicCarousel__container">
    <div class="b-dynamicCarousel__content" style="
      {{#with backgroundColor}}--color-theme-accent: var(--color-{{this}}-theme-accent, var(--component-highlight-color)){{/with}}
      ">
      {{> organism/o82-generic-slider }}
    </div>
    {{#with buttons }}
      <footer class="b-dynamicCarousel__footer" data-content-buttons>
        {{#each this}}
          {{> molecule/m02-button this }}
        {{/each}}
      </footer>
    {{/with}}
  </div>
</section>
