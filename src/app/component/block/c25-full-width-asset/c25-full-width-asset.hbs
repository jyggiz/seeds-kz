

<section class="b-fullWidthAsset{{#if cropped}} -cropped{{/if}}{{#if theme}} t-{{theme}}{{/if}}" data-component="c25-full-width-asset" {{#if scrollComponent}}data-scroll-component{{/if}} data-lazy-component
  {{#if padding}}
  style="{{#with padding}}--component-block-padding: var(--{{#with start}}block-padding-{{this}}{{else}}container-margin{{/with}})
    {{#unless (condition start '===' end)}}var(--{{#with end}}block-padding-{{this}}{{else}}container-margin{{/with}}){{/unless}};{{/with}}"
  {{/if}}
>

  {{#if backgroundVideo}}
    {{> atom/a19-video backgroundVideo lazy=true}}
  {{^}}
    {{#with image}}{{> molecule/m03-sticky-media image=this }}{{/with}}
  {{/if}}

  <div class="b-fullWidthAsset__container" data-content-container>
    {{> molecule/m04-component-header }}

    {{#if (condition buttons '||' shareButton)}}
    <div class="b-fullWidthAsset__buttons" data-buttons>
      {{#each buttons}}
        {{> molecule/m02-button this }}
      {{/each}}
      {{#with shareButton}}
        {{> molecule/m02-button
          data=(object
            share-button=null
            share=(toJson this)
            success-message=@root.i18n.copied
          )
          icon="share"
          label=@root.i18n.shareArticle
          level="secondary"
          theme="white"
        }}
      {{/with}}
    </div>
    {{/if}}
  </div>
</section>
