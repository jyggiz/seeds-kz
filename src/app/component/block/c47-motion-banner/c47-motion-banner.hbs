

<section
  class="b-motionBanner{{#if theme}} t-{{theme}}{{/if}}{{#with variant}} -{{this}}{{/with}} {{#if fullMinHeight}} -fullMinHeight{{/if}}"
  data-component="c47-motion-banner"
  {{#if scrollComponent}}data-scroll-component{{/if}}
  {{#if id}} id="{{id}}"{{/if}}
  {{#with variant}}data-variant="{{this}}"{{/with}}
  {{#if (condition backgroundColor '||' padding)}}
  style="{{#with padding}}--component-block-padding: var(--{{#with start}}block-padding-{{this}}{{else}}container-margin{{/with}})
    {{#unless (condition start '===' end)}}var(--{{#with end}}block-padding-{{this}}{{else}}container-margin{{/with}}){{/unless}};{{/with}}
    {{#with backgroundColor}}--component-background-color: {{#unless (condition this '===' transparent)}}var(--color-{{this}}){{^}}transparent{{/unless}};{{/with}}"
  {{/if}}
  data-lazy-component
>
  <div class="b-motionBanner__container">
    {{#with logo}}
      <div class="b-motionBanner__logo" data-logo>
        {{> atom/a01-image disableTransition=true variant='contain' }}
      </div>
    {{/with}}
  </div>

  <div class="b-motionBanner__assetWrapper" data-asset-wrapper>
    {{#with background}}
      <div
        class="b-motionBanner__background"
        data-background
        data-src="{{this.image.src}}"
      >
        {{> molecule/m34-component-background }}
      </div>
    {{/with}}
    {{#each assets}}
      <div class="b-motionBanner__asset" data-asset>
        {{> atom/a01-image disableTransition=true variant='contain' }}
      </div>
    {{/each}}
  </div>
</section>
