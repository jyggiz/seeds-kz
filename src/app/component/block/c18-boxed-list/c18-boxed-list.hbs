

<section
  class="b-boxedList
         {{#if variant}}-{{variant}}{{/if}}
         {{#if theme}} t-{{theme}}{{/if}}
         {{#if align}} -{{align}}{{^}} -center{{/if}}
         {{#if background}} t-darkMono{{/if}}
         {{#if fullMinHeight}} -fullMinHeight{{/if}}"
  {{#if (condition backgroundColor '||' padding)}}
  style="{{#with padding}}--component-block-padding: var(--{{#with start}}block-padding-{{this}}{{else}}container-margin{{/with}})
    {{#unless (condition start '===' end)}}var(--{{#with end}}block-padding-{{this}}{{else}}container-margin{{/with}}){{/unless}};{{/with}}
    {{#with backgroundColor}}--component-background-color: {{#unless (condition this '===' transparent)}}var(--color-{{this}}){{^}}transparent{{/unless}};{{/with}}"
  {{/if}}
  data-items="{{toJson items}}"
  data-component="c18-boxed-list" {{#if scrollComponent}}data-scroll-component{{/if}} data-lazy-component>

  {{#if background }}
    {{> molecule/m34-component-background background disableTransition=true scrollComponent=true}}
  {{/if}}
  <div class="b-boxedList__background" data-box-background>
    {{#each items}}
      {{#if background}}
        <div data-item-id="{{@index}}">
          {{> molecule/m34-component-background background disableTransition=true scrollComponent=true}}
        </div>
      {{/if}}
    {{/each}}
  </div>

  <div class="b-boxedList__container">
    <div class="b-boxedList__header">
      {{> molecule/m04-component-header header }}
    </div>

    <div class="b-boxedList__slider swiper-container" data-slider>
      <ul class="b-boxedList__cards swiper-wrapper{{#unless (condition variant '===' 'singleRow')}} -has{{items.length}}Items{{/unless}}">
        {{#each items}}
          <li class="b-boxedList__card swiper-slide" data-boxed-list-card {{#with content}}data-modal-content="{{toJson this}}"{{/with}}>
            {{> organism/o34-boxed-card align=../align variant=../variant }}
          </li>
        {{/each}}
      </ul>
    </div>

    {{> atom/a08-page-indicators items=null }}
  </div>
</section>
