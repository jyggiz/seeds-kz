<section class="b-shuffleHeroSlider{{#if theme}} t-{{theme}}{{/if}}"
  data-component="c111-shuffle-hero-slider"
  {{#if scrollComponent}}data-scroll-component{{/if}}
  {{#if id}} id="{{id}}"{{/if}}
  {{#if (condition backgroundColor '||' padding)}}
    style="{{#with padding}}--component-block-padding: var(--{{#with start}}block-padding-{{this}}{{else}}container-margin{{/with}})
    {{#unless (condition start '===' end)}}var(--{{#with end}}block-padding-{{this}}{{else}}container-margin{{/with}}){{/unless}};{{/with}}
    {{#with backgroundColor}}--component-background-color: {{#unless (condition this '===' transparent)}}var(--color-{{this}}){{^}}transparent{{/unless}};{{/with}}"
  {{/if}}
  data-lazy-component
>
  <div class="b-shuffleHeroSlider__container">
    <ul class="b-shuffleHeroSlider__labels">
      {{#each items}}
        <li class="b-shuffleHeroSlider__labelsItem{{#if (condition @index '===' 0)}} -isActive{{/if}}" data-slide-label>
          {{data.label}}
        </li>
      {{/each}}
    </ul>
    <ul class="b-shuffleHeroSlider__minimap{{#if (condition items.length '>' 5)}} -twoColumns{{/if}}">
      {{#each items}}
        <li class="b-shuffleHeroSlider__minimapItem{{#if (condition @index '===' 0)}} -isActive{{/if}}" data-minimap-item>
          {{#with data.slideImage}}
            {{> atom/a01-image disableTransition=true }}
          {{/with}}
        </li>
      {{/each}}
    </ul>
    {{> organism/o95-dynamic-carousel }}
  </div>
</section>
