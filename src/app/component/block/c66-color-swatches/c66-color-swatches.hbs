

<section class="b-colorSwatches {{#if theme}} t-{{theme}}{{/if}}"
         data-component="c66-color-swatches"
         {{#if scrollComponent}}data-scroll-component{{/if}}
          data-enable-transition="{{#if disableTransition}}false{{^}}true{{/if}}"
         {{#if id}} id="{{id}}"{{/if}}
         data-lazy-component>
  <div class="b-colorSwatches__container">
    <header class="b-colorSwatches__header">
      {{> atom/a03-heading heading}}
      <div class="b-colorSwatches__description" data-description>{{{description}}}</div>
    </header>
  <div class="b-colorSwatches__colors {{#if isPrimary}}-isPrimary{{/if}}">
    {{#each colors}}
    <div class="b-colorSwatches__color">
      {{> organism/o63-color-swatch parentId=../id}}
    </div>
    {{/each}}
    {{#with colorRatio}}
    <div class="b-colorSwatches__colorRatio" data-color-ratio>
      <div class="b-colorSwatches__colorRatioImageContainer">
      {{> atom/a01-image image disableTransition=true}}
      </div>
      <div class="b-colorSwatches__colorsRatioInfoContainer">
        {{#each ratioInfo}}
          <div class="b-colorSwatches__colorsRatioInfo">
            <div class="b-colorSwatches__colorName">{{tabsCopy}}</div>
            <div class="b-colorSwatches__tag">{{{tag}}}</div>
          </div>
        {{/each}}
      </div>
    </div>
    {{/with}}
  </div>
  </div>
</section>
