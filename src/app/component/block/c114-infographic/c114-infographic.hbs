

<section class="b-infographic {{#if theme}}t-{{theme}}{{/if}}"
  data-component="c114-infographic"
  {{#if scrollComponent}}data-scroll-component{{/if}}
  {{#if id}} id="{{id}}"{{/if}}
  {{#if (condition backgroundColor '||' padding)}}
    style="{{#with padding}}--component-block-padding: var(--{{#with start}}block-padding-{{this}}{{else}}container-margin{{/with}})
    {{#unless (condition start '===' end)}}var(--{{#with end}}block-padding-{{this}}{{else}}container-margin{{/with}}){{/unless}};{{/with}}
    {{#with backgroundColor}}--component-background-color: {{#unless (condition this '===' transparent)}}var(--color-{{this}}){{^}}transparent{{/unless}};{{/with}}"
  {{/if}}
  data-lazy-component
>
   <div class="b-infographic__container" data-slider-container>
    <div class="b-infographic__header {{#if headingStartAlignment}}startAlignment{{/if}}">
      <div class="b-infographic__controls" data-controls>
        {{> organism/o42-slider-controls }}
      </div>
      {{#if heading}}
        {{> atom/a03-heading heading }}
      {{/if}}
    </div>
    <div class="b-infographic__swiperContainer swiper__container" data-slider>
      <ul class="b-infographic__swiper swiper-wrapper" data-gallery-list {{#if lightbox}}data-lightbox="{{toJson items}}"{{/if}}>
        {{#each items}}
          <li class="b-infographic__item swiper-slide" data-gallery-list-item>
            {{> organism/o32-gallery-card hasFullscreenButton=true}}
          </li>
        {{/each}}
      </ul>
    </div>
    <div class="b-infographic__pagination" data-pagination>
      {{> atom/a08-page-indicators }}
    </div>
  </div>
</section>
