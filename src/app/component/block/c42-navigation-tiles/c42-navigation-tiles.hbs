<link rel="stylesheet" href="./c42-navigation-tiles.scss">


<section class="b-navigationTiles{{#if theme}} t-{{theme}}{{/if}}"
         data-component="c42-navigation-tiles"
         {{#if scrollComponent}}data-scroll-component{{/if}}
         {{#if (condition backgroundColor '||' padding)}}
         style="{{#with padding}}--component-block-padding: var(--{{#with start}}block-padding-{{this}}{{else}}container-margin{{/with}})
           {{#unless (condition start '===' end)}}var(--{{#with end}}block-padding-{{this}}{{else}}container-margin{{/with}}){{/unless}};{{/with}}
           {{#with backgroundColor}}--component-background-color: {{#unless (condition this '===' transparent)}}var(--color-{{this}}){{^}}transparent{{/unless}};{{/with}}"
         {{/if}}
>
  <div class="b-navigationTiles__container">
    {{#with items}}
      {{#with previous}}
        {{> molecule/m25-tile-button icon="arrow-left" variant="previous" theme=../../theme transform=heading.transform}}
      {{/with}}
      {{#with next}}
        {{> molecule/m25-tile-button icon="arrow-right" variant="next" theme=../../theme transform=heading.transform}}
      {{/with}}
    {{/with}}
  </div>
</section>

