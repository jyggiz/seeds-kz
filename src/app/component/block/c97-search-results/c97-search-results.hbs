



<section class="b-searchResults"
  data-component="c97-search-results"
  {{#if scrollComponent}}data-scroll-component{{/if}}
  {{#if id}} id="{{id}}"{{/if}}
  {{#if (condition backgroundColor '||' padding)}}
    style="{{#with padding}}--component-block-padding: var(--{{#with start}}block-padding-{{this}}{{else}}container-margin{{/with}})
    {{#unless (condition start '===' end)}}var(--{{#with end}}block-padding-{{this}}{{else}}container-margin{{/with}}){{/unless}};{{/with}}
    {{#with backgroundColor}}--component-background-color: {{#unless (condition this '===' transparent)}}var(--color-{{this}}){{^}}transparent{{/unless}};{{/with}}"
  {{/if}}
  data-show-button-copy="{{showButtonCopy}}"
  data-hide-button-copy="{{hideButtonCopy}}"

>
  <div class="b-searchResults__container">
    {{#if (condition results.length '>' 0)}}

      {{> atom/a03-heading heading }}

      {{#each results}}
        <div class="b-searchResults__section">

          {{> atom/a03-heading element='h6' size='h6' text=heading }}

          <ul class="b-searchResults__cards" data-cards>
            {{#each items}}
              <li class="b-searchResults__card">{{> organism/o35-article-card content-category=../heading content-category-total=../items.length }}</li>
            {{/each}}
          </ul>

          <div class="b-searchResults__control" data-list-control>
            {{> molecule/m06-link icon='chevron-down' href='#' label=../showButtonCopy }}
          </div>
        </div>
      {{/each}}

    {{else}}

      <div class="b-searchResults__noResults">
        {{> molecule/m04-component-header emptyContent }}
      </div>

    {{/if}}
  </div>
</section>
