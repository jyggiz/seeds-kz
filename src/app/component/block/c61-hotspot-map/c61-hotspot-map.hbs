

<section class="b-hotspotMap{{#if intro}} -hasIntro{{/if}}"
         data-component="c61-hotspot-map"
         {{#if scrollComponent}}data-scroll-component{{/if}}
         {{#if id}} id="{{id}}"{{/if}}
         data-lazy-component>
  {{#with intro}}
    {{> organism/o66-intro-steps}}
  {{/with}}

  {{#with stopExploringButton}}
    {{> molecule/m02-button data=(object stop-exploring-button="") }}
  {{/with}}

  <div class="b-hotspotMap__map" data-region-hotspot-map>
    {{> organism/o64-hotspot-map }}
    {{#with modalList}}
        {{>organism/o67-modal-list-viewer }}
    {{/with}}
  </div>

  {{#with mobileInstructions}}
    {{> organism/o65-mobile-instructions}}
  {{/with}}
</section>

