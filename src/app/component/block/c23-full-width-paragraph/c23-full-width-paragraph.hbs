

<section class="b-fullWidthParagraph {{#if hasBackgroundPattern}}-hasBackgroundPattern{{/if}}{{#if theme}} t-{{theme}}{{/if}}"
  data-component="c23-full-width-paragraph" {{#if scrollComponent}}data-scroll-component{{/if}} data-lazy-component
  {{#if backgroundColor}}
         style="{{#with backgroundColor}}--component-background-color: {{#unless (condition this '===' transparent)}}var(--color-{{this}}){{^}}transparent{{/unless}};{{/with}}"
  {{/if}}
>
  <div class="b-fullWidthParagraph__container">
    {{> molecule/m04-component-header header }}
    <div class="b-fullWidthParagraph__paragraphs" data-paragraphs>
      {{#each paragraphs}}
        <p class="b-fullWidthParagraph__paragraph">{{this}}</p>
      {{/each}}
    </div>
  </div>
</section>
