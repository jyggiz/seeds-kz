

<section
  class="b-factsFigures
  {{#if theme}}t-{{theme}}{{/if}}
  {{#if (condition items.length "===" 2)}}-double{{/if}}
  {{#if background}}-backgroundAsset{{/if}}
  {{#if fullMinHeight}} -fullMinHeight{{/if}}"
  data-component="c52-facts-figures"
  {{#if scrollComponent}}data-scroll-component{{/if}}
  {{#with id}} id="{{this}}"{{/with}}
  style="{{#if (condition backgroundColor '||' padding)}}
           {{#with padding}}--component-block-padding: var(--{{#with start}}block-padding-{{this}}{{else}}container-margin{{/with}})
             {{#unless (condition start '===' end)}}var(--{{#with end}}block-padding-{{this}}{{else}}container-margin{{/with}}){{/unless}};{{/with}}
             {{#with backgroundColor}}--component-background-color: {{#unless (condition this '===' transparent)}}var(--color-{{this}}){{^}}transparent{{/unless}};{{/with}}
  {{/if}}--component-grid-columns: {{items.length}};"
  data-lazy-component
>
  {{#if background}}
     {{> molecule/m34-component-background background }}
  {{/if}}
  <div class="b-factsFigures__container">
    {{#with header}}{{> molecule/m04-component-header alignment="left" }}{{/with}}
    <div class="b-factsFigures__columns">
      {{#each items}}
        {{> organism/o58-facts-list }}
      {{/each}}
    </div>
  </div>
</section>
