<link rel="stylesheet" href="./c106-site-index.scss">


<section class="b-siteIndex"
  data-component="c106-site-index"
  {{#if scrollComponent}}data-scroll-component{{/if}}
  {{#if id}} id="{{id}}"{{/if}}
  {{#if (condition backgroundColor '||' padding)}}
    style="{{#with padding}}--component-block-padding: var(--{{#with start}}block-padding-{{this}}{{else}}container-margin{{/with}})
    {{#unless (condition start '===' end)}}var(--{{#with end}}block-padding-{{this}}{{else}}container-margin{{/with}}){{/unless}};{{/with}}
    {{#with backgroundColor}}--component-background-color: {{#unless (condition this '===' transparent)}}var(--color-{{this}}){{^}}transparent{{/unless}};{{/with}}"
  {{/if}}
  data-lazy-component
>
  <div class="b-siteIndex__container">
    {{#with heading}}
      {{> atom/a03-heading}}
    {{/with}}
    <ul>
      {{#each sections}}
        <li class="b-siteIndex__section">
          <h2 class="b-siteIndex__sectionHeading">
            {{> molecule/m06-link }}
          </h2>
          <div class="b-siteIndex__sectionContent">
            {{#each columns}}
              <ul class="b-siteIndex__sectionColumn{{#unless (condition items.[0].variant '===' 'heading')}} -noHeading{{/unless}}">
                {{#each items}}
                  <li class="b-siteIndex__sectionItem">
                    {{> molecule/m06-link }}
                    {{#if subitems}}
                      <ul class="b-siteIndex__sectionSubcolumn">
                        {{#each subitems}}
                          <li class="b-siteIndex__sectionItem">
                            {{> molecule/m06-link }}
                          </li>
                        {{/each}}
                      </ul>
                    {{/if}}
                  </li>
                {{/each}}
              </ul>
            {{/each}}
          </div>
        </li> 
      {{/each}}
    </ul>
  </div>
</section>
