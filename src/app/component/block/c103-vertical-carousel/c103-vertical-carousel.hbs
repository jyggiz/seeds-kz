


<section class="b-verticalCarousel
  {{#if theme}} t-{{theme}}{{/if}}"
         data-component="c103-vertical-carousel"
         {{#if scrollComponent}}data-scroll-component{{/if}}
  {{#if id}} id="{{id}}"{{/if}}
  {{#if (condition backgroundColor '||' padding)}}
         style="{{#with padding}}--component-block-padding: var(--{{#with
           start}}block-padding-{{this}}{{else}}container-margin{{/with}})
           {{#unless (condition start '===' end)}}var(--{{#with
             end}}block-padding-{{this}}{{else}}container-margin{{/with}}){{/unless}};{{/with}}
           {{#with backgroundColor}}--component-background-color: {{#unless
             (condition this '===' transparent)}}var(--color-{{this}}){{^}}transparent{{/unless}};{{/with}}"
  {{/if}}
         data-lazy-component
>
  <div class="b-verticalCarousel__wrapper" data-wrapper>
    <div class="b-verticalCarousel__container" data-container>
      {{#with eyebrow}}
        {{> atom/a04-eyebrow size='medium' }}
      {{/with}}

      <div class="b-verticalCarousel__scrollLabel" data-scroll-label>
        <span class="b-verticalCarousel__scrollLabelCopy">{{scrollLabel}}</span>
        {{> atom/a02-icon name="arrow-down" }}
      </div>

      <ul class="b-verticalCarousel__imageList{{#if hideInactiveSlides}} -hideInactiveSlides{{/if}}" data-image-list>
        {{#each items}}
          <li class="b-verticalCarousel__imageItem" data-image-item>
            {{> atom/a01-image image disableTransition="true" }}
          </li>
        {{/each}}
      </ul>

      <ul class="b-verticalCarousel__contentItemList" data-content-list>
        {{#each items}}
          <li class="b-verticalCarousel__contentItem" data-content-item>
            {{> atom/a03-heading text=heading.text size='h3' element='h3'}}
            <p class="b-verticalCarousel__copy">
              {{{copy}}}
            </p>
            {{#with cta}}
              {{> molecule/m02-button size="small" icon="arrow-right" }}
            {{/with}}
          </li>
        {{/each}}
      </ul>
    </div>
  </div>
</section>
