

<section class="b-testimonials{{#if theme}} t-{{theme}}{{/if}} {{#if fullMinHeight}} -fullMinHeight{{/if}}" data-component="c53-testimonials" {{#if
  scrollComponent}}data-scroll-component{{/if}}
  {{#if (condition backgroundColor '||' padding)}}style="{{#with padding}}--component-block-padding: var(--{{#with start}}block-padding-{{this}}{{else}}container-margin{{/with}})
    {{#unless (condition start '===' end)}}var(--{{#with end}}block-padding-{{this}}{{else}}container-margin{{/with}}){{/unless}};{{/with}}
    {{#with backgroundColor}}--component-background-color: {{#unless (condition this '===' transparent)}}var(--color-{{this}}){{^}}transparent{{/unless}};{{/with}}"{{/if}}
  data-lazy-component
>
  {{#with background}}
  {{> molecule/m34-component-background }}
  {{/with}}
  <div class="b-testimonials__container">
    {{#with header}}{{> molecule/m04-component-header this}}{{/with}}
    {{#if items}}
    <ul class="b-testimonials__logos -has{{items.length}}Items" data-logo-container>
      {{#each items}}
      <li>
        <button class="b-testimonials__logo"
                {{#with ariaLabel}}aria-label="{{this}}"{{/with}}
                data-item="{{toJson this}}"
                data-logo-item
        >
          <div class="b-testimonials__image" aria-hidden="true" data-default-image>
            {{> atom/a01-image images.default disableTransition=true }}
          </div>
          <div class="b-testimonials__image -isActive" aria-hidden="true" data-active-image>
            {{> atom/a01-image images.active disableTransition=true }}
          </div>
        </button>
      </li>
      {{/each}}
    </ul>
    <ul class="b-testimonials__items" data-testimonial-list>
      {{#each items}}
      <li class="b-testimonials__item" data-testimonial-item>
        {{> organism/o87-testimonial testimonial ariaLive="polite"}}
      </li>
      {{/each}}
    </ul>
    {{/if}}
  </div>
</section>
