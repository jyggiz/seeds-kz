


<section class="b-contentSlider" data-component="c77-content-slider" {{#if scrollComponent}}data-scroll-component{{/if}}
  {{#if id}} id="{{id}}" {{/if}} data-lazy-component>

  <div class="b-contentSlider__swiperContainer" data-swiper-container>

    <ul class="swiper-wrapper">
      {{#each items}}

      <li class="b-contentSlider__slide swiper-slide{{#if theme}} t-{{theme}}{{/if}}{{#if cream}} -cream{{/if}}{{#if uppercaseCopy}} -uppercaseCopy {{/if}}"
          data-slide
      >
        {{#with image}}
        <div class="b-contentSlider__imageContainer">
          {{> atom/a01-image this disableTransition=true}}
        </div>
        {{/with}}

        {{#with gridContent}}
        {{> organism/o30-content-grid this}}
        {{/with}}

        {{#with multipleCopy}}
        <div class="b-contentSlider__multipleCopyContainer">
          {{> molecule/m49-multiple-copy this}}
        </div>
        {{/with}}
      </li>

      {{/each}}
    </ul>
  </div>

  <div class="b-contentSlider__controls">
    <div class="b-contentSlider__control -prev" data-previous-button>
      {{> molecule/m02-button theme="white" level="primary" icon="arrow-left" }}
    </div>
    <div class="b-contentSlider__control -next" data-next-button>
      {{> molecule/m02-button theme="white" level="primary" icon="arrow-right" }}
    </div>
  </div>

  <div class="b-contentSlider__pagination" data-pagination>
    {{> molecule/m48-slider-pagination items=items autoplay=false }}
  </div>

</section>
