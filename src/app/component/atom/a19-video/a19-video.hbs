<link rel="stylesheet" href="./a19-video.scss">
<script src="./A19Video.ts"></script>


<div class="a-video {{#if variant}} -{{variant}}{{/if}}"
     data-component="a19-video"
     {{#if lazy}}data-lazy{{/if}}
>
{{#with props}}
  <video
    class="a-video__video"
    {{#unless enhancedPoster}}poster="{{poster}}"{{/unless}}
    {{#if ../autoloop}}autoplay loop muted playsinline
    {{^}}
      {{#if loop}}loop{{/if}}
      {{#if muted}}muted{{/if}}
      {{#if autoplay}}autoplay{{/if}}
      {{#if playsinline}}playsinline{{/if}}
    {{/if}}
    {{#if crossorigin}}crossorigin="{{crossorigin}}"{{/if}}
    data-video
  >
    {{#each sources}}
      <source {{#if ../../lazy}}data-src="{{src}}"{{^}}src="{{src}}"{{/if}} type="{{type}}" {{#if media}} media="{{media}}" {{/if}}  />
    {{/each}}
    {{#if src}}
      <source {{#if ../lazy}}data-src="{{src}}"{{^}}src="{{src}}"{{/if}} type="{{type}}"/>
    {{/if}}
    Your browser does not support the video tag.
  </video>
  {{#with enhancedPoster}}
    <div class="a-video__enhancedPoster">
      {{> atom/a01-image image disableTransition=true poster=true }}
    </div>
  {{/with}}
{{/with}}
</div>

